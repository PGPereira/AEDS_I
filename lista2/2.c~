#include <stdio.h>

int main (){
        #define timeunit 60

        unsigned short int a[3], i, tempo;

        printf ("Por favor, escreva a quantidade de tempo em segundos Ã  ser convertida.\n");
        scanf("%u", &tempo);
        
        for (i = 0; i < 3; i++){
                a[i] = tempo % timeunit;
                tempo /= timeunit;
        }

        printf ("Tempo convertido >>= %02u:%02u:%02u\n", a[2], a[1], a[0]);

        return 0;
}
